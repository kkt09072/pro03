<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="free">

	<!-- has a 관계 설정 -->
	<resultMap type="free" id="freeRM">
		<result property="member.id" column="id"/>
		<result property="member.name" column="name"/>
	</resultMap>
	
	<!-- 자유게시판 목록 조회 -->
	<select id="getFreeList" parameterType="pagingBean" resultMap="freeRM">
		select f.no, f.title, f.content, f.hits, f.resdate, m.id, m.name
		 from free f, member m   
		 where f.id=m.id order by f.resdate desc 
		 limit #{startRowNumber}, #{contentNumberPerPage} 
	</select>	
	
	<!-- 자유게시판 상세 보기 -->
	<select id="getFree" resultMap="freeRM">
		select f.no, f.title, f.content, f.hits, f.resdate, m.id, m.name
		 from free f, member m   
		 where f.id=m.id and no=#{no}
	</select>
	
	<!-- 자유게시판 글 등록 -->
	<insert id="insFree" parameterType="com.morning.domain.Free">
		insert into free values (default, #{title}, #{content}, default, default, #{member.id}, #{member.name})
	</insert>
	
	<!-- 자유게시판 글 변경 -->
	<update id="upFree" parameterType="com.morning.domain.Free">
		update free set title=#{title}, content=#{content} where no=#{no}
	</update>

	<!-- 자유게시판 글 조회수 증가 -->
	<update id="hitCount">
		update free set hits=hits+1 where no=#{no}
	</update>
	
	<!-- 자유게시판 글 삭제 -->
	<delete id="delFree">
		delete from free where no=#{no}
	</delete>
</mapper>