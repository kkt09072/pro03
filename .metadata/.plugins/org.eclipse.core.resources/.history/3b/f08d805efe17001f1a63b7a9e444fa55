package com.morning.ctrl;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestAttribute;
import org.springframework.web.bind.annotation.RequestMapping;

import com.morning.biz.BoardBiz;
import com.morning.domain.Board;

@Controller
@RequestMapping("/board/")
public class BoardController {

	@Autowired
	private BoardBiz boardService;
	
	@RequestMapping("list.do")
	public String getBoardList(Model model) {
		model.addAttribute("list", boardService.getBoardList());
		return "board/list";
	}
	
	@RequestMapping("detail.do")
	public String getBoard(@RequestAttribute("bno") int bno, Model model) {
		model.addAttribute("board", boardService.getBoard(bno));
		return "board/get";
	}
	
	@RequestMapping("insert.do")
	public String insBoard(Board board, Model model) {
		boardService.insBoard(board);
		return "redirect:list.do";
	}

	@RequestMapping("update.do")
	public String upBoard(@RequestAttribute int bno, Model model) {
		model.addAttribute("board", boardService.getBoard(bno));
		return "board/edit";
	}
	
	@RequestMapping("updatePro.do")
	public String upBoardPro(Board board, Model model) {
		boardService.upBoard(board);
		return "redirect:list.do";
	}
}
