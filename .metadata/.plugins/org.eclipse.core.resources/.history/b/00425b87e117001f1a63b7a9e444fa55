<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	
	<!-- 총 게시물 수 -->
	<select id="getTotalCount" resultType="int">
		select COUNT(*) from board
	</select>

	<select id="getBoardList" resultType="com.morning.domain.Board">
		select * from board order by resdate desc
	</select>	
	<select id="getBoard" resultType="com.morning.domain.Board">
		select * from board where bno=#{bno}
	</select>
	<insert id="insBoard" parameterType="com.morning.domain.Board">
		insert into board values (#{bno}, #{title}, #{content}, #{author}, 
		default, default)
	</insert>
	<update id="upBoard" parameterType="com.morning.domain.Board">
		update board set title=#{title}, content=#{content} where bno=#{bno}
	</update>
	<update id="vcntCount">
		update board set vcnt=vcnt+1 where bno=#{bno}
	</update>
	<delete id="delBoard">
		delete from board where bno=#{bno}
	</delete>
</mapper>