<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	
	<!-- 총 게시물 수 -->
	<select id="getTotalCount" resultType="int">
		select COUNT(*) from board
	</select>
	
	<!-- 공지사항 목록 -->
	<select id="getBoardList" resultType="com.morning.domain.Board">
		select * from board order by resdate desc
	</select>
	
	<!-- 공지사항 상세 보기 -->	
	<select id="getBoard" parameterType="int" resultType="com.morning.domain.Board">
		select * from board where bno=#{bno}
	</select>
	
	<!-- 공지사항 등록 -->
	<insert id="insBoard" parameterType="com.morning.domain.Board">
		insert into board values (default, #{title}, #{content}, #{author}, 
		default, default)
	</insert>
	
	<!-- 공지사항 변경 -->
	<update id="upBoard" parameterType="com.morning.domain.Board">
		update board set title=#{title}, content=#{content} where bno=#{bno}
	</update>
	
	<!-- 공지사항 조회수 증가 -->
	<update id="vcntCount" parameterType="int">
		update board set vcnt=vcnt+1 where bno=#{bno}
	</update>
	
	<!-- 공지사항 삭제 -->
	<delete id="delBoard" parameterType="int">
		delete from board where bno=#{bno}
	</delete>
</mapper>